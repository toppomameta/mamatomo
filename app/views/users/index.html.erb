<div class="row">
  <div class="col-lg-12">
    <h1>顧客情報一覧</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-6">
    <p>お客様情報が表示されます。</p>
  </div>
  <div class="col-lg-6">
    <%= link_to '顧客登録', new_user_path, class: "btn btn-default pull-right" %>
  </div>
  <%= search_form_for @q do |f| %>
    <div class="row">
      <div class="col-sm-3 col-xs-12">
        <div class="form-group">
          <%= f.label :family_name_cont, '姓' %>
          <%= f.search_field :family_name_cont, class: "form-control input-sm" %>
        </div>
      </div>
      <div class="col-sm-3 col-xs-12">
        <div class="form-group">
          <%= f.label :given_name_cont, '名' %>
          <%= f.search_field :given_name_cont, class: "form-control input-sm" %>
        </div>
      </div>
      <div class="col-sm-3 col-xs-12">
        <div class="form-group">
          <%= f.label :email_cont, '電子メール' %>
          <%= f.search_field :email_cont, class: "form-control input-sm" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 text-center">
        <%= f.submit "検索", class: "btn btn-default" %>
        <%= link_to "リセット", request.path, class:"btn btn-default" %>
      </div>
    </div>
  <% end %>
  <hr />
  <table class="table table-striped">
    <thead>
      <th>姓</th>
      <th>名</th>
      <th>電子メール</th>
      <th>リンク</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.family_name %></td>
          <td><%= user.given_name %></td>
          <td><%= user.email %></td>
          <td><%= link_to '詳細', user, class: "btn btn-default btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users %>
</div>
